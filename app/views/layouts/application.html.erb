<!DOCTYPE html>
<html>
<head>
  <title>Depot Online Store</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body class='<%= controller.controller_name %>'>
	<div id='banner'>
		<%= image_tag("rails.png") %>
		<%= @page_title || "Bookshelf" %>
	</div>
	<div id='columns'>
		<div id='side'>
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
					<%= render @cart %>
				<% end %>
			<% end %>

			<ul>
				<li><%= link_to 'Home', store_path %></li>
				<li><%= link_to 'Questions', '#' %></li>
				<li><%= link_to 'News', '#' %></li>
				<li><%= link_to 'Contact', '#' %></li>
			</ul>
			<%= @time %>
		</div>
		<div id='main'>
			<%= yield %>
		</div>
	</div>
</body>
</html>
